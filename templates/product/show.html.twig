{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}

    <div class="container">
        <div class="row align-items-start flex-column flex-lg-row">

            <div class="d-block d-lg-none">
                <h1>{{ product.title|capitalize }}</h1>
                <p class="text-muted">{{ product.category.title }}</p>
                <p>{{ product.price }} €</p>
            </div>

            <div class="col">
                <img src="{{ asset('uploads/products/' ~ product.imageFilename) }}" alt="{{ product.title }}">
            </div>

            <div class="col">
                <div class="d-none d-lg-block">
                    <h1>{{ product.title|capitalize }}</h1>
                    <p class="text-muted">{{ product.category.title }}</p>
                    <p>{{ product.price }} €</p>
                </div>

                <p>{{ product.description }}</p>
            </div>

        </div>
    </div>

{% endblock %}
